@model SecretSanta.Models.PasswordResetViewModel

@{
    ViewBag.Title = $"{Resources.Global.SiteName} - {Resources.Global.PasswordReset_Title}";
}

<h2>@Resources.Global.PasswordReset_Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.DisplayFor(m=>m.UserId)

    <div class="form-group">
        @Html.ValidationMessageFor(m => m.Token)
        @Html.LabelFor(m => m.Token)
        @Html.EditorFor(m => m.Token, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.ValidationMessageFor(m => m.NewPassword)
        @Html.LabelFor(m => m.NewPassword)
        @Html.EditorFor(m => m.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.ValidationMessageFor(m => m.ConfirmNewPassword)
        @Html.LabelFor(m => m.ConfirmNewPassword)
        @Html.EditorFor(m => m.ConfirmNewPassword, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <button type="submit" class="btn btn-primary">@Resources.Global.Button_Submit</button>
}