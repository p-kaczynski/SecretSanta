@model SecretSanta.Models.GiftSentPostModel

@{
    ViewBag.Title = $"{Resources.Global.SiteName} - {Resources.Global.GiftSent}";
}

<h2>@Resources.Global.GiftSent</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.ValidationMessageFor(m => m.Tracking)
        @Html.LabelFor(m => m.Tracking)
        @Html.EditorFor(m => m.Tracking, new { htmlAttributes = new { @class = "form-control" } })
        @Html.HelpTextFor(m => m.Tracking)
    </div>
    <div class="form-group">
        @Html.ValidationMessageFor(m => m.Confirmation)
        @Html.EditorFor(m => m.Confirmation)
        @Html.LabelFor(m => m.Confirmation)
        @Html.HelpTextFor(m => m.Confirmation)
    </div>
    <button type="submit" class="btn btn-primary">@Resources.Global.Status_Outbound_Sent_Submit</button>

}
